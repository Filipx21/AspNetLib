@model List<_07_EF_MVC_View_Razor.Models.Course>

@{
    ViewBag.Title = "Home Page";
}

    <div class="row">
        <ul>
            @foreach (var item in Model)
            {
                <li>
                    <img src="@item.ImageUrl" />
                    @item.Name @item.Description
                </li>

            }
        </ul>

        @if (Model.Count() == 0)
        {
            <span>
                Brak kursów!
            </span>
        }
        else
        {
            var i = 12;
            <span>@i</span>
        }

        <span @if (Model.Count != 0) { <text> style="display: none" </text> }>Chwilowy brak kursów</span>

    </div>